<%= stylesheet_link_tag "style" %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <header class="navbar">
    <%= link_to '<', unauthenticated_root_path, class: 'back-icon' %>
    <h2 class="header">LOGIN</h2>
    <%= f.submit "Log in", class: "log-submit" %>
  </header>

  <div class="field">
    <%= f.label :email, class: 'label-1' %><br />
    <%= f.email_field :email, autofocus: true, placeholder: true, autocomplete: "email", class: 'field-1' %>
    <%= f.label :password, class: 'label-1' %><br />
    <%= f.password_field :password, placeholder: true, autocomplete: "current-password", class: 'field-1-2' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
