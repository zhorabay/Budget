<div class="categories-new">
  <header class="navbar">
    <%= link_to '<', categories_path, class: 'back-icon' %>
    <h2 class="header">NEW CATEGORY</h2>
  </header>
  <%= form_with model: @category, class: "form" do |f| %>
    <div class="field">
      <%= f.label :name, class: 'label-1' %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Category name", class: 'field-1' %>
    </div>

    <div class="field">
      <%= f.label :icon, class: 'label-1' %>
      <%= f.text_field :icon, autofocus: true, autocomplete: "icon", placeholder: "Icon link: https://i.pravatar.cc/300?img=5", class: 'field-1' %>
    </div>

    <p>* Please, provide a valid link that starts with <strong>'https:'</strong> and ends with <strong>'png/gif/jpg'</strong>.</p>

    <div class="actions">
      <%= f.submit "ADD", data: { turbo: false }, class: "btn" %>
    </div>
  <% end %>
</div>
